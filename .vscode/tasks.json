{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Ceedling Build",
			"type": "shell",
			"command": "ceedling release",
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/C"]
				}
            }, 
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Ceedling Clean",
			"type": "shell",
			"command": "ceedling clean",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/C"]
				}
            }, 
			"group": {
				"kind": "build",
				"isDefault": true
			},
            "problemMatcher": []
		},
		{
			"label": "Erase Flash MCU",
			"type": "shell",
			"command": "pk3cmd.exe -P32MX795F512L -E",
			"options": {
				"cwd": "${workspaceRoot}\\build\\temp",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/C"]
				}
			}, 
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Write to Flash MCU",
			"type": "shell",
			"command": "pk3cmd.exe -P32MX795F512L -F${workspaceFolder}\\build\\release\\sua50.hex -M -Y",
			"options": {
				"cwd": "${workspaceRoot}\\build\\temp",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/C"]
				}
			}, 
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Read Flash from MCU",
			"type": "shell",
			"command": "pk3cmd.exe -P32MX795F512L -GFreadDevice.hex",
			"options": {
				"cwd": "${workspaceRoot}\\build\\temp",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/C"]
				}
			}, 
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Reset MCU",
			"type": "shell",
			"command": "pk3cmd.exe -P32MX795F512L -H -L",
			"options": {
				"cwd": "${workspaceRoot}\\build\\temp",
				"shell": {
					"executable": "cmd.exe",
					"args": ["/C"]
				}
			}, 
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},		
	]
}