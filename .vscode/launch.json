{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}${pathSeparator}build${pathSeparator}release${pathSeparator}project_name.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "stopAtEntry": true,
            "preLaunchTask": "x86 Debug Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "STM32 Cortex Debug",
            "type": "cortex-debug",
            "device": "Cortex-M0",
            "executable": "D:${pathSeparator}sasha${pathSeparator}temp${pathSeparator}gits${pathSeparator}fwProjectTemplate${pathSeparator}build${pathSeparator}release${pathSeparator}pku.elf",
            "servertype": "jlink",
            "interface": "swd",
            "request": "launch",
            //путь к файлу описания регистров микроконтроллера (SVD файл), его можно найти в папке с файлами поддержки семейства микроконтроллеров для STM32CubeMx
            "svdFile": "./JLink/STM32F042x.svd"
        },
        {
            // Use the following for the Ceedling Explorer Debug Configuration
            "name": "ceedling_gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/out/${command:ceedlingExplorer.debugTestExecutable}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            // May omit the following if gdb is on the PATH
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}